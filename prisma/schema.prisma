generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  name     String
  password String
  roles    Role[]  @default(value: [USER])
  Order    Order[]
}

enum Role {
  ADMIN
  USER
}

model Book {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  title  String
  author String
  genre  String[]
  price  Int
  stock  Int

  Order Order[]
}

model Order {
  id     String      @id @default(auto()) @map("_id") @db.ObjectId
  status OrderStatus @default(value: PENDING)
  books  String[]    @db.ObjectId
  userId String      @db.ObjectId

  book Book @relation(fields: [books], references: [id])
  user User @relation(fields: [userId], references: [id])
}

enum OrderStatus {
  PENDING
  SHIPPED
  DELIVERED
}
